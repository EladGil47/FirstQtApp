{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-qt-project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",  // Specify your build directory
                "--config", "Debug",  // or "Release" depending on your configuration
                "--target", "FirstQtApp"  // Specify the target you want to build
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
